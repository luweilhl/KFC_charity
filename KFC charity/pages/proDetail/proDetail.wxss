.slider,.slider swiper,.slider image{
  width:100%;
  height:502rpx;
}
.text{
  margin:20rpx;
}
.little{
  display: inline-block;
  width: 94rpx;
  height:38rpx;
  line-height: 38rpx;
  background-color: rgb(164, 164, 233);
  font-size: 10px;
  border-radius: 6px;
  text-align: center;
  margin-left:60rpx;
}
.title{
  font-size: 15px;
  font-weight: bold;
  margin-top:10rpx;
}
.price{
  color:#ff0707;
  margin-top: 10rpx;
  margin-bottom: 20rpx;
}
.price>.num{
  font-size: 20px;
  font-weight: bold;
}
.price>.sign{
  font-size: 15px;
}
.gold{
  width:30rpx;
  height:30rpx;
}
.img_detail{
  width:100%;
  height:6970rpx;
  margin-bottom: 10rpx;
}
.bottom{
  position: fixed;
  bottom:0;
  width:100%;
  text-align: right;
  color: #fff;
}
.link{
  width: 246rpx;
  height: 42rpx;
  font-size:14px;
  padding:28rpx;
  background-color: #fff;
  color:#333;
  float: right;
}
.toCart{
  float: right;
  width:400rpx;
  height:50rpx;
  padding: 24rpx;
  background: #ff0707;
  text-align: center;
  font-size:16px;
  font-weight: bold;
  letter-spacing: 1.5px;
}
.link1{
  display: inline-block;
  padding-right: 20rpx;
  border-right: 1px solid #ccc;
}
.link2{
  display: inline-block;
  padding-left: 20rpx;
}