/* pages/product/product.wxss */
.header{
  display: flex;
  justify-content: space-around;
  margin-bottom: 30rpx;
  margin-top: 30rpx;
}
.head{
  font-size: 12px;
  position: relative;
  text-align: center;
}
.header .img{
  width:200rpx;
  height:150rpx;
  border-radius:24rpx;
  border:1px solid #eee;
  box-shadow: 0 0 8rpx 8rpx #eee;
}
.txt{
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  position: absolute;
  top:32rpx;
  left:20rpx;
  width:200rpxï¼›
}
.txt1{
  left:65rpx;
}
.txt3{
  left:42rpx;
}
.line{
  border:1px solid #eee;
  width:90%;
  margin:0 auto;
}
.products{
  display: flex;
  justify-content: space-around;
  margin-top:40rpx;
  flex-wrap: wrap;
  /* width:640rpx; */
}
.products .block{
  width:330rpx;
  height: 490rpx;
  box-shadow: 0 0 8rpx 8rpx #eee;
  margin:20rpx;
  position: relative;
}
.products .img{
  width:280rpx;
  height:278rpx;
}
.products .little{
  display: inline-block;
  width: 94rpx;
  height:38rpx;
  line-height: 38rpx;
  background-color: rgb(164, 164, 233);
  font-size: 10px;
  border-radius: 6px;
  text-align: center;
  margin-left:30rpx;
}
.products .title{
  font-size: 15px;
  font-weight: bold;
}
.products .price{
  color:#ff0707;
  position: absolute;
  bottom: 10rpx;
}
.products .price>.num{
  font-size: 20px;
  font-weight: bold;
}
.products .price>.sign{
  font-size: 15px;
}
.gold{
  width:30rpx;
  height:30rpx;
  vertical-align: bottom;
}